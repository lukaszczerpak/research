<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>SimpleSessionHessian</servlet-name>
        <servlet-class>eu.czerpak.servlet.SimpleSessionHessian</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleSessionHessian</servlet-name>
        <url-pattern>/SimpleSessionHessian</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SimpleStatefulHessian</servlet-name>
        <servlet-class>eu.czerpak.servlet.SimpleStatefulHessian</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleStatefulHessian</servlet-name>
        <url-pattern>/SimpleStatefulHessian</url-pattern>
    </servlet-mapping>
</web-app>